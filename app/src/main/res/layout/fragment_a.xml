        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更换文字" />
    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fragmentA"
